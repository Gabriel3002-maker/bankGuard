{
    "manifest_version": 3,
    "name": "Gmail Send Blocker",
    "version": "1.0",
    "description": "Detecta texto antes de enviar email en Gmail y alerta.",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["https://mail.google.com/*"],
    "content_scripts": [
        {
            "matches": ["https://mail.google.com/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ]
}
